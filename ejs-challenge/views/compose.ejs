<%- include('partials/header') -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="post-title"><strong>Title</strong></label><br>
        <input type="text" class="form-control" id="post-title" name="title" autocomplete="off">
    </div>    
    <div class="form-group">
        <label for="post-content"><strong>Post</strong></label><br>
        <textarea class="form-control" id="post-content" name="post" rows="4" autocomplete="off"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>